<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Setari_Admin_Angajat.Adaugare_Mancare">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Adaugare item"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <EdiText-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="57dp"-->
<!--        android:hint="Denumire"-->
<!--        android:layout_marginStart="8dp"-->
<!--        android:layout_marginEnd="8dp"-->
<!--        android:background="@drawable/rounded_button"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/textView3" />-->


    <Button
        android:id="@+id/admin_confirmare"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/poppins"
        android:text="Confirmare"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/invisible_divider_horizontal"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="text"
            android:padding="10dp"
            android:text="Denumire"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editImagine"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="text"
            android:padding="10dp"
            android:text="Nume Imagine"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editValoriNutritionale"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="text"
            android:padding="10dp"
            android:text="Valori nutritionale"
            android:textSize="16sp"

            />

        <EditText
            android:id="@+id/editTextDescriere"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="text"
            android:padding="10dp"
            android:text="Descriere"

            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextPret"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="text"
            android:padding="10dp"
            android:text="Pret"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>