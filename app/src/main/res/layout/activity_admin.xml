<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Start_Activity.AdminActivity">


    <!--
    Avem nevoie de o lista de butoane pentru actiunile adminului.

    nu avem nevoie de activity_angajat.

    Link pentru exemplu de creare background culoare/gradient:
    https://www.youtube.com/watch?v=88Z5Ly-Nb3g

    Nu avem nevoie de alte activitati momentan.
    Nu avem nevoie de alte pagini de log-in.
    Nu sterge intregi fragmente/activitati.
    -->


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:clipToPadding="true"
        android:divider="@drawable/invisible_divider_horizontal"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingTop="20dp"
        android:paddingEnd="40dp"
        android:showDividers="middle"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/admin_buton_adaugare_angajat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/poppins"
            android:text="Creare cont angajat"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/admin_schimbare_date_item_meniu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/poppins"
            android:text="Schimbare date item din meniu"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/admin_modificare"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_buttonv2"
            android:fontFamily="@font/poppins"
            android:text="Modificare"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/admin_confirmare"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/poppins"
            android:text="Confrmare"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/admin_adaugare_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/poppins"
            android:text="Adaugare item"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/admin_vizualizare_comenzi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/poppins"
            android:text="Vizualizare comenzi"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/admin_vizualizare_conturi_angajati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/poppins"
            android:text="Conturi angajati"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/admin_stergere_cont_angajati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/poppins"
            android:text="Stergere cont angajati"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>